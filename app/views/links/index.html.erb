<h1>Listing <%= @name %>'s links </h1>

    <% @links.each do |link| %>
        <%= link_to link.title, link.url %>

	<% if @is_admin  %>
	  <%= link_to '*', edit_user_link_path( current_user, link) %>
	  <%= link_to '&times;'.html_safe, user_link_path( current_user, link ), method: :delete %>
	<% end %>
	<br>
	<hr>
    <% end %>

<br>

<% if current_user %>
  <%= link_to 'New Link', new_user_link_path( current_user ) %>
<% end %>
